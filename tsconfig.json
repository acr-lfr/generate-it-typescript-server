{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2021",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@constants": [
        "src/constants"
      ],
      "@database": [
        "src/database"
      ],
      "@domains": [
        "src/domains"
      ],
      "@http": [
        "src/http"
      ],
      "@services": [
        "src/services"
      ],
      "@utils": [
        "src/utils"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "server.ts",
    "global.d.ts"
  ]
}
